{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "commonjs", 
    "lib": ["ES2022"],
    "rootDir": "src", 
    "outDir": "dist", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
